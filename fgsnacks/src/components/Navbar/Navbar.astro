---
const NavbarLinks = [
    { name: "Hamburguesas", url: "/#hamburguesas" },
    { name: "Hot Dogs", url: "/#hotdogs" },
    { name: "Complementos", url: "/#complementos" },
    { name: "Contacto", url: "/#contacto" },
    { name: "Horario", url: "/#horario" },
];
---

<nav
    class="bg-desert text-asphalt | dark:bg-asphalt dark:text-desert | fixed top-0 z-10 | w-full"
>
    <div
        class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
        <a
            href="/"
            class="text-2xl font-semibold whitespace-nowrap | hover:text-blue-700"
        >
            FG Snacks
        </a>

        <button
            id="navbar-toggler"
            class="p-2 | md:hidden | hover:bg-blue-600"
            onclick="toggleNavbar()"
        >
            <svg
                class="w-6 h-6"
                aria-hidden="true"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                    fill-rule="evenodd"
                    d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                    clip-rule="evenodd"></path></svg
            >
        </button>

        <div class="hidden w-full md:block md:w-auto" id="navbar-default">
            <ul
                class="font-medium | flex flex-col md:flex-row md:space-x-8 | mt-4 md:mt-0"
            >
                {
                    NavbarLinks.map(({ name, url }: any, index) => (
                        <li>
                            <a
                                href={url}
                                class="block | py-2 pl-3 md:p-0 | bg-desert dark:bg-asphalt | text-asphalt dark:text-desert hover:text-inherit md:hover:text-blue-700 | hover:bg-blue-700 dark:hover:bg-blue-700 md:hover:bg-inherit dark:md:hover:bg-inherit"
                            >
                                {name}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</nav>

<script is:inline>
function toggleNavbar() {
    const navbar = document.getElementById("navbar-default");
    navbar.classList.toggle("hidden");
}
</script>
